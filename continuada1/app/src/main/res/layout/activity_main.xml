<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troco"
        android:textSize="50sp"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="352dp"
        tools:layout_editor_absoluteY="35dp"
        android:id="@+id/id_troco"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Valor do produto"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/id_troco"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/valor_produto"/>

    <!--Valor do Produto-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Digite aqui"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/valor_produto"
        tools:layout_editor_absoluteX="16dp"
        android:inputType="number"
        android:id="@+id/campo_produto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Valor pago"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/campo_produto"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/valor_pagamento"
        />

    <!--Valor Pago-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Digite aqui"
        app:layout_constraintTop_toBottomOf="@id/valor_pagamento"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/campo_pagamento"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nome do produto"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/campo_pagamento"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/nome_produto"
        />

    <!--Nome do produto-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Digite aqui"
        app:layout_constraintTop_toBottomOf="@id/nome_produto"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/campo_nome"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular troco"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/campo_nome"
        android:id="@+id/bt_calcula"
        />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/bt_calcula"
        tools:layout_editor_absoluteX="59dp" />
</androidx.constraintlayout.widget.ConstraintLayout>